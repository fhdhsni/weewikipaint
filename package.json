{
  "name": "weewikipaint",
  "version": "0.0.1",
  "engines": {
    "node": "7.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fhdhsni/weewikipaint"
  },
  "description": "just following along James Shore from Let's Code: Test-Driven JavaScript",
  "author": "Farhad hsni <farhad.hsni@gmail.com>",
  "license": "MIT",
  "scripts": {
    "0": "#",
    "1": "#",
    "2": "#",
    "start": "PORT=5000 && node ./src/server/weewikipaint.js $PORT",
    "build": "yarn run test && webpack --config ./webpack.production.js -p",
    "rm": "rm -rf ./dist ./test/test ./test/src",
    "s0": "# --------------------------------------- webpack ------------------------------------------------",
    "ws": "webpack-dev-server  --config ./webpack.development.js --host $(./findLocalip.sh)",
    "wsl": "webpack-dev-server --config ./webpack.development.js",
    "s1": "# ----------------------------------------- tsc ---------------------------------------------------",
    "tsc:server": "tsc ./src/server/*.ts -m 'CommonJS' -t 'ES6'",
    "tsc:test": "tsc ./test/client/*.ts ./test/**/*.ts --outDir ./test/ -m 'CommonJS' -t 'ES5' --lib es6",
    "tsc:watch:server": "yarn run tsc:server -- --watch",
    "tsc:watch:test": "yarn run tsc:test -- --watch",
    "tswatch": "run-p tsc:watch:*",
    "tsc": "run-s tsc:server tsc:test",
    "s2": "# ----------------------------------------- test stuff --------------------------------------------",
    "test": "run-s tsc mocha && karma start --single-run # | tee ./testOutput.txt && ./checkBrowsers.sh",
    "mocha": "mocha ./test/test/server/*.js",
    "k:start": "karma start",
    "k:run": "./tscwatch.sh && karma run | tee ./testOutput.txt && ./checkBrowsers.sh",
    "k:stop": "karma stop"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.4",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "beta",
    "html-webpack-inline-source-plugin": "^0.0.6",
    "html-webpack-plugin": "^2.26.0",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.4.0",
    "npm-run-all": "^4.0.1",
    "postcss-loader": "^1.2.2",
    "procfile": "^0.1.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "tslint-eslint-rules": "^3.3.0",
    "tslint-loader": "^3.3.0",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.1.5",
    "webpack": "beta",
    "webpack-dev-server": "beta"
  }
}
